@{
    // Assigning the ViewData["Title"] key a value of "Grade Calculator"
    ViewData["Title"] = "Grade Calculator";
}

@model Calculate_Grade_Model;


<h1 class="Welcome pt-3">Grade Calculator</h1>

<div class="container pt-5">
    <div class="row">
        <div class="col d-flex justify-content-center">
            <div class="card border-success mb-3" style="width: 800px;">
                <div class="card-header">Grade Calculator</div>
                <div class="card-body p-3" style="padding: 0px 100px 10px 100px;">
                    <p class="text-center">Enter your grades in the following categories and this website will calculate your letter grade</p>

                    @*The Grade Calculator Form*@
                    <form method="POST">
                        <fieldset class="px-5">
                            <div class="form-group">
                                @* Assignments Input *@
                                <label class="form-label mt-4" for="AssignmentsInput">Assignments</label>
                                <div class="input-group mb-3">
                                    <input asp-for="AssignmentGradeGradePercent" name="AssignmentsInput" id="AssignmentsInput" type="number" class="form-control">
                                    <span class="input-group-text">%</span>
                                </div>

                                @* Group Projects Input *@
                                <label class="form-label mt-4" for="GroupProjectsInput">Group Projects</label>
                                <div class="input-group mb-3">
                                    <input asp-for="GroupProjectsGradePercent" name="GroupProjectsInput" id="GroupProjectsInput" type="number" class="form-control">
                                    <span class="input-group-text">%</span>
                                </div>

                                @* Quizzes Input *@
                                <label class="form-label mt-4" for="QuizzesInput">Quizzes</label>
                                <div class="input-group mb-3">
                                    <input asp-for="QuizzesGradePercent" name="QuizzesInput" id="QuizzesInput" type="number" class="form-control">
                                    <span class="input-group-text">%</span>
                                </div>

                                @* Midterm Exam Input *@
                                <label class="form-label mt-4" for="MidtermExamInput">Midterm Exam</label>
                                <div class="input-group mb-3">
                                    <input asp-for="MidtermExamGradePercent" name="MidtermExamInput" id="MidtermExamInput" type="number" class="form-control">
                                    <span class="input-group-text">%</span>
                                </div>

                                @* Final Exam Input *@
                                <label class="form-label mt-4" for="FinalExamInput">Final Exam</label>
                                <div class="input-group mb-3">
                                    <input asp-for="FinalExamGradePercent" name="FinalExamInput" id="FinalExamInput" type="number" class="form-control">
                                    <span class="input-group-text">%</span>
                                </div>

                                @* INTEX grade Input *@
                                <label class="form-label mt-4" for="INTEXInput">INTEX</label>
                                <div class="input-group mb-3">
                                    <input asp-for="INTEXGradePercent" name="INTEXInput" id="INTEXInput" type="number" class="form-control">
                                    <span class="input-group-text">%</span>
                                </div>

                            </div>
                            <center>
                                @* ASP Validation Summary *@
                                <div asp-validation-summary="All"></div>

                                <!-- THE SUBMIT BUTTON -->
                                <button id="CalcGrade" type="submit" class="btn btn-outline-success mt-3">Calculate</button>

                                <!-- A break and an "hr" tag will be added here: -->
                                <div id="HiddenBreak"></div>
                                <!-- The Final Grade Percentage will go here: -->
                                <div id="CalculatedGrade" class="text-center"></div>
                                <!-- The Final Letter Grade will go here: -->
                                <div id="LetterGrade" class="text-center" style="font-weight: bold;"></div>
                            </center>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>